#include <stdio.h>
#include<math.h>
int main () {
    float principal,r,time,SI,CI;
    printf("Enter the principal,r,time:\n");
    scanf("%f %f %f",&principal,&r,&time);
    SI=principal*r*time/100;
    CI=principal*pow((1+r/100),time)-principal;
    printf("SI=%.2f\n",SI);
    printf("CI=%.2f\n",CI);
    return 0;
}













